{
    "manifest_version": 3,
    "name": "RapidTriage DevTools",
    "version": "2.3.0",
    "description": "YarlisAISolutions RapidTriage - Browser debugging and monitoring tools",
    "devtools_page": "devtools.html",
    "permissions": [
        "scripting",
        "activeTab", 
        "storage",
        "tabs",
        "webNavigation",
        "debugger"
    ],
    "host_permissions": [
        "<all_urls>"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "popup.html",
        "default_title": "RapidTriage Controls"
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["content.js"],
            "run_at": "document_start",
            "all_frames": true
        }
    ]
}